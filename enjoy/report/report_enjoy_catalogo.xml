<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_enjoy_catalogo">
            <t t-call="report.html_container">
                <t t-call="report.layout">
                    <t t-foreach="docs" t-as="o">
                        <link rel="stylesheet" type="text/css"
                              href="//fonts.googleapis.com/css?family=Open+Sans+Condensed"/>
                        <style type="text/css">
                            h1 {
                            font-family: Open Sans Condensed;
                            font-size: 40px;
                            font-style: normal;
                            color: #e78752
                            font-variant: normal;
                            font-weight: 500;
                            line-height: 26.4px;
                            }
                            h2 {
                            font-family: Open Sans Condensed;
                            font-size: 19px;
                            font-style: normal;
                            color: #e78752
                            font-variant: normal;
                            font-weight: 500;
                            line-height: 20.4px;
                            }
                            h3 {
                            font-family: Open Sans Condensed;
                            font-size: 14px;
                            font-style: normal;
                            font-variant: normal;
                            font-weight: 500;
                            line-height: 15.4px;
                            }
                            h4 {
                            font-family: Open Sans Condensed;
                            font-size: 9px;
                            font-style: normal;
                            font-variant: normal;
                            font-weight: 500;
                            line-height: 10.4px;
                            }
                            p {
                            font-family: Open Sans Condensed;
                            font-size: 14px;
                            font-style: normal;
                            font-variant: normal;
                            font-weight: 400;
                            line-height: 20px;
                            }
                            blockquote {
                            font-family: Open Sans Condensed;
                            font-size: 21px;
                            font-style: normal;
                            font-variant: normal;
                            font-weight: 400;
                            line-height: 30px;
                            }
                            pre {
                            font-family: Open Sans Condensed;
                            font-size: 13px;
                            font-style: normal;
                            font-variant: normal;
                            font-weight: 400;
                            line-height: 18.5667px;
                            }
                        </style>
                        <div class="page">

                            <!--<div class="col-xs-12">-->
                            <img src="/enjoy/static/src/img/report/pag1.jpg"/>
                            <!--<img class="img img-responsive" src="/enjoy/static/src/img/report/p1.jpg"/>-->
                            <!--</div>-->
                            <div class="col-xs-12 text-center" style="padding-top:20px;padding-left:30px;">
                                <h1 style="font-size:60px;padding-top:45px;color: e78752">
                                    <span t-esc="o.nombre"/>
                                    <label value=" "/>
                                    <span t-esc="o.lugar.name"/>
                                </h1>
                                <p style="color: e78752">
                                    _________________________________________________________________________________________________
                                </p>
                                <h1 style="font-size:60px;color: e78752">
                                    <span t-field="o.desde"/>
                                    -
                                    <span t-field="o.hasta"/>
                                </h1>
                            </div>
                            <div class="col-xs-12">
                                <img src="/enjoy/static/src/img/report/footer.jpg"/>
                            </div>
                        </div>
                        <div class="page">
                            <img src="/enjoy/static/src/img/report/pag2.jpg" style="width: 1000px;height: 1400px;"/>
                        </div>
                        <div class="page">
                            <img src="/enjoy/static/src/img/report/pag3.jpg" style="width: 1000px;height: 1400px;"/>
                        </div>
                        <div class="page">
                            <img src="/enjoy/static/src/img/report/pag4.jpg" style="width: 1000px;height: 1400px;"/>
                        </div>
                        <div class="page">
                            <img src="/enjoy/static/src/img/report/pag5.jpg" style="width: 1000px;height: 1400px;"/>
                        </div>
                        <div t-foreach="o.casa_ids" t-as="casa">
                            <div class="page">
                                <img src="/enjoy/static/src/img/report/header.jpg"
                                     style="width: 110%;height: 70px;"/>
                                <div class="col-xs-12" style="padding-bottom:20px">
                                    <div class="col-xs-4 text-center" style=" background-color:f79147;">
                                        <h1 style="font-size:60px;">
                                            <span t-field="casa.name" style="padding-top:45px;color:ffffff"/>
                                        </h1>
                                    </div>
                                    <div class="col-xs-2 text-right" style="padding-right:30px;">
                                        <t t-if="casa.nivel == 'e'">
                                            <img src="/enjoy/static/src/img/report/iconos/economic.jpg"
                                                 style="height:75px"/>
                                        </t>
                                        <t t-if="casa.nivel == 'c'">
                                            <img src="/enjoy/static/src/img/report/iconos/confort.jpg"
                                                 style="height:75px"/>
                                        </t>
                                        <t t-if="casa.nivel == 'l'">
                                            <img src="/enjoy/static/src/img/report/iconos/lujo.jpg"
                                                 style="height:75px"/>
                                        </t>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <table class="text-right">
                                            <tr>
                                                <td t-foreach="casa.servicio_ids" t-as="s" class="text-right">
                                                    <span t-field="s.image_small"
                                                          t-field-options='{"widget": "image"}'/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <p style="color: e78752">
                                    ________________________________________________________________________________________________________________________________
                                </p>
                                <div class="col-xs-12" style="padding-top:15px;padding-left:5px;">
                                    <!--<div class="col-xs-12">-->
                                    <!--<span t-field="casa.image_lateral" t-field-options='{"widget": "image"}'-->
                                    <!--style="height: 45px;width:100%"/>-->
                                    <!--</div>-->
                                    <div class="row" style="padding-button:20px;">
                                        <div class="col-xs-12">
                                            <div class="col-xs-4 text-left">
                                                <h2>
                                                    <span style="color:c4691a">Location:</span>
                                                    <span t-field="casa.lugar.name"/>
                                                </h2>
                                            </div>
                                            <div class="col-xs-4 text-left">
                                                <h2>
                                                    <span style="color:c4691a">It's perfect for:</span>
                                                    <span t-field="casa.para"/>
                                                </h2>
                                            </div>
                                            <div class="col-xs-4 text-left">
                                                <h2>
                                                    <span style="color:c4691a">Price:</span>
                                                    <span t-field="casa.precio"
                                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </h2>
                                            </div>
                                        </div>
                                        <div class="col-xs-12" style="padding-buttom:20px;">
                                            <div class="col-xs-8" style="padding-top:50px;">
                                                <table class="col-xs-12">
                                                    <tbody class="invoice_tbody">
                                                        <tr>
                                                            <td style="color:c4691a;width: 40%;">
                                                                <span style="font-size: 20px;">Type of accommodation:
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span t-field="casa.alojamiento"
                                                                      style="font-size: 20px;"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="color:c4691a;width: 40%;">
                                                                <span style="font-size: 20px;">Dispose of:</span>
                                                            </td>
                                                            <td>
                                                                <span t-field="casa.dispone" style="font-size: 20px;"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="color:c4691a;width: 40%;">
                                                                <span style="font-size: 20px;">Number of Bedrooms:
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span t-field="casa.dormitorios"
                                                                      style="font-size: 20px;"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="color:c4691a;width: 40%;">
                                                                <span style="font-size: 20px;">Number of Guests:
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span t-field="casa.capacidad"
                                                                      style="font-size: 20px;"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <div class="col-xs-12" style="padding-top:20px;">
                                                    <div class="col-xs-4">
                                                        <h3 style="color:c4691a;">Beds:</h3>
                                                        <table class="col-xs-12">
                                                            <tbody class="invoice_tbody">
                                                                <tr t-foreach="casa.cama_ids" t-as="c">
                                                                    <td>
                                                                        <h4>
                                                                            <span t-field="c.cantidad"/>
                                                                            -
                                                                            <span t-field="c.tipo"/>
                                                                        </h4>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="col-xs-4">
                                                        <h3 style="color:c4691a;">Bathrooms:</h3>
                                                        <table class="col-xs-12">
                                                            <tbody class="invoice_tbody">
                                                                <tr t-foreach="casa.banno_ids" t-as="b">
                                                                    <td>
                                                                        <h4>
                                                                            <span t-field="b.cantidad"/>
                                                                            -
                                                                            <span t-field="b.tipo"/>
                                                                        </h4>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="col-xs-4">
                                                        <h3 style="color:c4691a;">Areas:</h3>
                                                        <table class="col-xs-12">
                                                            <tbody class="invoice_tbody">
                                                                <tr t-foreach="casa.zona_ids" t-as="z">
                                                                    <td>
                                                                        <h4>
                                                                            <span t-field="z.name"/>
                                                                        </h4>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-4" style="padding-top:50px;">
                                                <h3 style="color:c4691a;">Servises</h3>
                                                <table class="col-xs-12">
                                                    <tbody class="invoice_tbody">
                                                        <tr t-foreach="casa.servicio_ids" t-as="s">
                                                            <td>
                                                                <h4>
                                                                    ►
                                                                    <span t-field="s.name"/>
                                                                </h4>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <p style="padding-top:15px;color: e78752;">
                                        ____________________________________________________________________________________________________________________________
                                    </p>
                                    <div class="row" style="padding-top:20px">
                                        <div class="col-xs-12" style="padding-top:20px;">
                                            <div class="col-xs-6"
                                                 style="padding:10px;">
                                                <span t-field="casa.image1" t-field-options='{"widget": "image"}'/>
                                            </div>
                                            <div class="col-xs-6"
                                                 style="padding:10px;">
                                                <span t-field="casa.image2" t-field-options='{"widget": "image"}'/>
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class=" col-xs-4" style="padding:10px;">
                                                <span t-field="casa.image3" t-field-options='{"widget": "image"}'/>
                                            </div>
                                            <div class="col-xs-4" style="padding:10px;">
                                                <span t-field="casa.image4" t-field-options='{"widget": "image"}'/>
                                            </div>
                                            <div class="col-xs-4" style="padding:10px;">
                                                <span t-field="casa.image5" t-field-options='{"widget": "image"}'/>
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-6"
                                                 style="padding:10px;">
                                                <span t-field="casa.image6" t-field-options='{"widget": "image"}'/>
                                            </div>
                                            <div class="col-xs-6"
                                                 style="padding:10px;">
                                                <span t-field="casa.image7" t-field-options='{"widget": "image"}'/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
