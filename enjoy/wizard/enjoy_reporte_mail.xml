<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="enjoy_reporte_mail_view" model="ir.ui.view">
            <field name="name">enjoy.report.mail.view</field>
            <field name="model">enjoy.report.mail</field>
            <field name="arch" type="xml">
                <form string="Reporte mail">
                    <group>
                        <field name="destino_ids" widget="many2many_tags" colspan="2"/>
                    </group>

                    <footer>
                        <button name="enviar_reporte" string="Enviar" type="object" default_focus="1"
                                class="oe_highlight"/>
                        o
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="enjoy_reporte_catalogo_view" model="ir.ui.view">
            <field name="name">enjoy.report.catalogo.view</field>
            <field name="model">enjoy.report.catalogo</field>
            <field name="arch" type="xml">
                <form string="Report mail">
                    <group>
                        <field name="destino_ids" widget="many2many_tags" colspan="2"/>
                    </group>
                    <footer>
                        <button name="enviar_reporte" string="Enviar" type="object" default_focus="1"
                                class="oe_highlight"/>
                        o
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>